                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </TextBox.Foreground>
                <TextBox.Background>
                    <SolidColorBrush Color="#FFB0BAC3" Opacity="0.4"/>
                </TextBox.Background>
