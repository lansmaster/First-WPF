        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Height="31.64 px" Width="70.78 px" Margin="157.53,172,839.69,876.36" FontFamily="Poppins Medium" FontSize="20" Foreground="#FF7C838A">
                <Run Text="Name"/>
